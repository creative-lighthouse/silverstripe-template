# For a complete list of core environment variables see
# https://docs.silverstripe.org/en/4/getting_started/environment_management/#core-environment-variables

# DB credentials
SS_DATABASE_CLASS="MySQLDatabase"
SS_DATABASE_SERVER="db"
SS_DATABASE_USERNAME="db"
SS_DATABASE_PASSWORD="db"
SS_DATABASE_NAME="db"

# WARNING: in a live environment, change this to "live" instead of dev
SS_ENVIRONMENT_TYPE="dev"

# Configure a default username and password to access the CMS on all sites in this environment.
SS_DEFAULT_ADMIN_USERNAME="admin"
SS_DEFAULT_ADMIN_PASSWORD="password"

# Only necessary on live servers for images
#SS_BASE_URL="https://silverstripe-template.ddev.site"

# Settings for Vite:
VITE_DEV_SERVER_URL="https://silverstripe-template.ddev.site:5173"
VITE_MANIFEST_PATH="/app/client/dist/.vite/manifest.json"
VITE_OUTPUT_DIR="/app/client/dist/"
MAILER_DSN="smtp://localhost:1025"
SS_DATABASE_PORT="3306"
